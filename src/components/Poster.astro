---
import { Picture } from '@astrojs/image/components';

const { reverse=false, tem, sp } = Astro.props;
---

<section 
    class={`text-white aspect-auto px-4 lg:px-12 py-8 sm:py-4 lg:py-12 flex flex-col ${reverse ? 'sm:flex-row-reverse':'sm:flex-row'}`}
    style={`background: linear-gradient(
        ${reverse ? `65deg, #bae6fd 0%, #bae6fd 45%, ${sp.bg} 45%, ${sp.bg} 100%`:`115deg, ${sp.bg} 0%, ${sp.bg} 55%, #bae6fd 55%, #bae6fd 100%`}, 
        ${sp.bg} 0%
    )`}
>


    <div class={`sm:basis-2/5 flex flex-col items-center justify-center text-center relative ${reverse ? 'sm:-right-2 lg:-right-6' : 'sm:-left-2 lg:-left-6'}`}>
        
        <div class="border-2 border-black sm:border-white rounded-full 
            text-xs lg:text-sm font-bold uppercase text-black sm:text-white 
            px-2 py-1 mb-4"
        >
            sản phẩm tiêu biểu
        </div>

        
        <div class="w-2/3 mx-auto my-4"><img src={tem} alt="" /></div>
        
        
        
        <div
            class="text-black sm:text-white font-bold sm:font-normal 
            text-lg md:text-2xl lg:text-3xl 
            uppercase lg:leading-snug"
        >
            {sp.desc}
        </div>        
    </div>
    
    <div class="sm:basis-3/5 grid grid-cols-2 gap-2 md:gap-4">
        {sp.imgs.map((image) => (
            <div class="w-full aspect-square overflow-hidden border-4 lg:border-8 border-white shadow-md">
            <Picture class="w-full h-full object-cover" src={image.url} alt={image.alt} widths={[150, 250, 360]} aspectRatio="1:1" sizes="(min-width: 1200px) 100vw, 360px" format={"webp"}/>
            </div>
        ))}
    </div>

</section>