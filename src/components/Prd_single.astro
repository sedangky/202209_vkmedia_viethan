---
// import { Image } from '@astrojs/image/components';
const { Img, Alt, Code } = Astro.props;
---

<article class="flex flex-col border-4 md:border-8 border-white bg-white shadow-md">
    <div class="bg-gray-300 w-full aspect-square">
        <img class="w-full h-full object-cover" src={Img} width="500" height="500" alt={Alt} />
    </div>

    <div class="uppercase text-center py-1 font-bold text-xs sm:text-sm">{Code}</div>


</article>