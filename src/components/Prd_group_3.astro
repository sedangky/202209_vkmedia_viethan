---
import PrdGroup from "./Prd_group.astro";

const prds = await Astro.glob('../pages/product/xop-pe-tb/*.md');
---

<PrdGroup 
    heading = "xốp pe foam tráng bạc"
    text = "Là loại xốp PE có thêm lớp xi mạ nhôm siêu bền trên bề mặt, gia tăng tác dụng chống nhiệt. Thường được dùng làm lớp cách nhiệt, cách âm rất hiệu quả trong công trình xây dựng, nhà xưởng sản xuất"
>
    <div class="grid grid-cols-2 md:grid-cols-4 gap-2 sm:gap-4">
        {prds.map(p => (
            <a href={p.url}>
                <div class="group flex flex-col border-4 md:border-8 border-white bg-white shadow-md hover:shadow-lg transition-all duration-500">
                    <div class="bg-gray-300 w-full aspect-square overflow-hidden">
                        <img class="w-full h-full object-cover transition-all duration-500 group-hover:scale-125" src={p.frontmatter.image_url} width="500" height="500" alt={p.frontmatter.image_alt} />
                    </div>
                    <div class="flex items-center justify-between py-1">
                        <div class="uppercase font-bold text-xs sm:text-sm">{p.frontmatter.prd_code}</div>
                        <div class="uppercase font-bold text-xs sm:text-sm text-red-700">{p.frontmatter.prd_price}.000đ</div>
                    </div>                    
                </div>
            </a>
    
        ))}
    </div>
</PrdGroup>